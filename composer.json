{
    "name": "yaap/theme",
    "description": "Theme support for Laravel with assets, theme extends etc.",
    "license": "MIT",
    "keywords": [
        "laravel",
        "theme",
        "layout",
        "asset"
    ],
    "authors": [
        {
            "name": "Biluk Andrey",
            "email": "yaapis@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.38",
        "orchestra/testbench": "^8",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "YAAP\\Theme\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "ThemeLoader": "YAAP\\Theme\\Facades\\ThemeLoader"
            },
            "providers": [
                "YAAP\\Theme\\ThemeServiceProvider"
            ]
        }
    },
    "scripts": {
        "style:fix": "vendor/bin/php-cs-fixer fix --config php-cs-fixer.dist.php",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ],
        "test": [
            "@php vendor/bin/phpunit"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
